<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gurpreetsingh.codeit" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/CodeIt" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/splashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ChooseLangActivity"
            android:label="Choose language"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".CProgList"
            android:label="Choose program"
            android:parentActivityName=".ChooseLangActivity" >
            <meta-data
                android:name="android.support.ChooseLangActivity"
                android:value=".ChooseLangActivity" >
            </meta-data>
        </activity>
        <activity
            android:name=".ShowProg"
            android:label="CodeIt!" >
        </activity>
        <activity
            android:name=".CppProgList"
            android:label="Choose program"
            android:parentActivityName=".ChooseLangActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ChooseLangActivity" />
        </activity>
        <activity
            android:name=".JavaProgList"
            android:label="Choose program"
            android:parentActivityName=".ChooseLangActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ChooseLangActivity" />
        </activity>
        <activity
            android:name=".AdaProgList"
            android:label="Choose program"
            android:parentActivityName=".ChooseLangActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ChooseLangActivity" />
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
    </application>

</manifest>
